            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="bi bi-bar-chart"></i>
                    Reports & Analytics
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-outline-primary">
                            <i class="bi bi-download"></i>
                            Export Reports
                        </button>
                    </div>
                </div>
            </div>

            <!-- Quick Stats Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Coming Soon</h4>
                                    <p class="card-text">Total Events</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-calendar-event display-4 opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Coming Soon</h4>
                                    <p class="card-text">Total Registrations</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-people display-4 opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Coming Soon</h4>
                                    <p class="card-text">Revenue</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-currency-dollar display-4 opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Coming Soon</h4>
                                    <p class="card-text">Pending Payments</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-clock display-4 opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Report Categories -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-calendar-check text-primary"></i>
                                Event Reports
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted">
                                Generate comprehensive reports about events, registrations, and attendance.
                            </p>
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Event Registration Summary
                                    <span class="badge bg-secondary">Coming Soon</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Attendance Reports
                                    <span class="badge bg-secondary">Coming Soon</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Popular Events Analysis
                                    <span class="badge bg-secondary">Coming Soon</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-cash-stack text-success"></i>
                                Financial Reports
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted">
